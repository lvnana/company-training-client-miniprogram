width: 252rpx;
height: 64rpx;
line-height: 64rpx;
color: white;
margin-top: 40rpx;
background-color: #0FCE95;
}
.radioes-item{
  margin-bottom: 25rpx;
}
.radio-group{
  padding: 10rpx 20rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;
   width: 12rpx; 
   height: 12rpx; 
   text-align: center;
   font-size:0rpx; /* 对勾大小 去掉 */
   background-color: #666; 
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
   border: 2rpx solid #eee;
}
radio{
  border-radius: 50%;
  width: 25rpx;/* 最好是4的倍数，不然会不在中间 */
  height: 25rpx;
  border: 2rpx solid #666;/* 设置边框（外圆） */
  font-size: 0;/* 让边框重合 */
  position: relative;
  top: 12rpx;
}
radio .wx-radio-input{
   border-radius: 50%;
    width: 25rpx;
   height: 25rpx;  
   border: none;/* 替换边框（隐藏原有边框） */
}
.radio{
  display: flex;
