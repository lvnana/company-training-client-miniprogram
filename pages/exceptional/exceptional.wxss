.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(112, 112, 112, 0.3);
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 590rpx;
  margin: 0rpx 50rpx;
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  box-shadow: 0px 3px 3px 2px gainsboro;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}
.zan-dialog__container input{
  width: 420rpx;
  margin: 20rpx auto;
  border: 1rpx solid #666;
}
.moneyes{
  text-align: center;
  /* padding: 20rpx 0rpx 10rpx; */
}
.classification{
  padding: 10rpx 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.zan-dialog--show .zan-dialog__mask {
  display: block;
}
