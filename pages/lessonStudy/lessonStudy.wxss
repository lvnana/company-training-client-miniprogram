/* pages/lessonStudy/lessonStudy.wxss */

.banner {
  width: 100%;
  height: 360rpx;
}

.banner image {
  width: 100%;
  height: 360rpx;
}

.study-t {
  font-size: 30rpx;
  padding: 30rpx 30rpx 10rpx;
}

.textarea {
  width: 550rpx;
  height: 150rpx;
  margin: 20rpx 0rpx;
  display: inline-block;
  border: 2rpx solid #f0f0f0;
}

.save {
  padding: 6rpx 18rpx;
  background: #169bd5;
  color: white;
  border-radius: 10rpx;
  display: inline-block;
  position: relative;
  left: 20rpx;
  top: -38rpx;
}

.save>text {
  position: relative;
  font-size: 26rpx;
}

.notesbox {
  width: 100%;
  height: 60rpx;
  background-color: #f0f0f0;
}

.notes-content {
  margin-left: 30rpx;
  position: relative;
}

.notesbox image {
  width: 60rpx;
  height: 59rpx;
}

.notes-content text {
  display: inline-block;
  position: absolute;
  top: 10rpx;
  margin-left: 15rpx;
  font-size: 30rpx;
}

.notes-item {
  font-size: 24rpx;
  color: #666;
  line-height: 37rpx;
  padding: 20rpx 35rpx 14rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.left-t {
  font-size: 26rpx;
  font-weight: 600;
  margin-right: 15rpx;
  color: #333;
}
.right-t{
  margin-left: 30rpx;
}
