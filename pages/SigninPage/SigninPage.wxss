  margin: 0 auto;
   padding: 0rpx 50rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.selectMonth {
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
  margin: 30rpx 0rpx 20rpx;
  line-height: 60rpx;
  justify-content: space-between;
 
}

.goleft, .goright {
  height: 50rpx;
  width: 50rpx;
  margin: 5rpx 22rpx;
}

.goleft image, .goright image {
  width: 50rpx;
  height: 50rpx;
}

.showDateInfo {
  /* margin: 0 auto; */
   /* padding: 0rpx 40rpx; */
  margin: 20rpx auto;
  padding-left: 10rpx;
}

.dateWeekStyle, .dateDayStyle {
  padding-left: 0rpx;
}

.dateWeekStyle >view {
  display: inline-block;
  width: 90rpx;
  text-align: center;
}

.dateDayStyle>view {
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin: 10rpx 0rpx 0rpx;
}

