

.header-box {
  width: 100%;
  height: 360rpx;
  position: relative;
  font-size: 30rpx;
}
.Signin-bgc image {
  width: 100%;
  height: 360rpx;
  line-height: 360rpx;
}

.Signin-bgc {
  width: 100%;
  height: 360rpx;
   z-index: -1;
}

.header-box .content {
    width: 220rpx;
  height: 280rpx;
  text-align: center;
  margin: 0 auto;
  position: absolute; 
  top: 40rpx;
  left: 270rpx;
  color: #D40714;
}


.content view:nth-child(1) {
  position: relative;
  top: 50rpx;
  font-weight: 600;
  
}
.content view:nth-child(2) {
  position: relative;
  top: 75rpx;
  font-size: 24rpx;
}

.content view:nth-child(3) {
  position: absolute;
  bottom: 0rpx;
  left: 20rpx;
   font-weight: 600;
}



