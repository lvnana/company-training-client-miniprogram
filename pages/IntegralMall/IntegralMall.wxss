.dots{ 
  position: absolute; 
  left: 0; 
  right: 0; 
  bottom: 20rpx; 
  display: flex; 
  justify-content: center; 
} 
.dots .dot{ 
  margin: 0 8rpx; 
  width:15rpx;
  height:6rpx;
  background:rgba(255,255,255,1);
  opacity:0.5;
  border-radius:1rpx;
  transition: all .6s; 
} 
.dots .dot.active{ 
  width:24rpx;
  height:6rpx;
  /* background:rgba(255,255,255,1); */
  background-color: #CA0915;
  border-radius:1rpx;
}
 
