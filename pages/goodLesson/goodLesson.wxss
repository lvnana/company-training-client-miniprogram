  font-size: 28rpx;
  padding: 0rpx 20rpx;
  margin-bottom: 20rpx;
}

.strategy_banner {
  padding-left: 15rpx;
}

.strategy_banner>image {
  width: 270rpx;
  height: 226rpx;
  /* background-color: #666; */
