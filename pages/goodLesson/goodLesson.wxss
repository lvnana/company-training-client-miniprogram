}

.strategy-item-right {
  width: 65%;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #666;
  /* background-color: #666; */
}

.titles {
  font-size: 32rpx;
  color: black;
  padding-bottom: 20rpx;
}

.flex {
  display: flex;
  padding-top: 10rpx;
}

.datatime {
  padding-top: 10rpx;
}

.datatime text {
  /* height: 32rpx;
  line-height: 32rpx; */
  display: inline-block;
  padding-left: 10rpx;
  position: relative;
  top: -1rpx;
}

