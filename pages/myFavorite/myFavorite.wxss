.select_box {
  margin-bottom: 20rpx;
  padding: 20rpx 40rpx 20rpx;
  position: relative;
  display: flex;
  /* justify-content: space-between; */
}

.select {
  box-sizing: border-box;
  /* width: 100%; */
  height: 70rpx;
  border: 1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  /* align-items: center; */
  padding: 0 20rpx;
}

.flexes text {
  font-size: 30rpx;
  /* flex: 1; */
  padding: 16rpx 10rpx 20rpx;
}

.flexes {
  display: flex;
}

.select_img {
  width: 27rpx;
  height: 22rpx;
  display: block;
  padding-left: 35rpx;
  position: relative;
  top: 20rpx;
  transition: transform 0.3s;
}

/* .select_img_rotate{
  transform:rotate(180deg); 
} */

.option_box {
  position: absolute;
  top: 85rpx;
  left: 50rpx;
  width: 25%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  text-align: center;
}

.option {
  display: flex;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 16rpx 10rpx 20rpx;
}

.option_boxs {
  position: absolute;
  top: 89rpx;
  right: 129rpx;
  width: 15%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}

.strategy-content {
  display: flex;
  /* width: 90%; *//* text-align: center; */
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.strategy-item {
  /* display: flex; */
  width: 100%;
  font-size: 28rpx;
  padding: 20rpx 20rpx;
}

.strategy_banner {
  padding-left: 15rpx;
}

.strategy_banner>image {
  width: 224rpx;
  height: 180rpx;
  /* background-color: #666; */
  border-radius: 10rpx;
}

.strategy-item-right {
  width: 65%;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #666;
  /* background-color: #666; */
}

.titles {
  font-size: 32rpx;
  color: black;
  padding-bottom: 10rpx;
}

.btnes {
  position: relative;
  top: 15rpx;
  text-align: center;
  font-size: 26rpx;
  display: inline-block;
}

.btnes view{
    padding: 5rpx 15rpx;
  border-radius: 17rpx;
  color: #0ddd9f;
  border: 1rpx solid #0ddd9f;
}
