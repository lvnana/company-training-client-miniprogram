/* pages/promote/promote.wxss */

view, scroll-view, swiper, button, input, textarea, label, navigator, image {
  box-sizing: border-box;
}

.tab {
  float: left;
  width: 20%;
  font-size: 34rpx;
   /* height: 120rpx; */
  text-align: center;
  /* line-height: 120rpx; */ 
  padding: 20rpx 0rpx 30rpx;

}

.topTabSwiper {
  zoom: 1;
  height: 120rpx;
  position: relative;
  padding: 10rpx 10rpx;
  /* background: #f00; */
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  color: #f00;
  border-bottom: 4rpx solid #f00;
}

.swiper {
  width: 100%;
}

.strategy-content{
  display: flex;
  /* width: 90%; */
  /* text-align: center; */
  padding-bottom: 30rpx;
   border-bottom: 1rpx solid #eee;
}
.strategy-item {
  /* display: flex; */
  width: 100%;
  font-size: 28rpx;
  padding: 30rpx 20rpx 0rpx;

}

.strategy_banner {
  padding-left: 15rpx;
}

.strategy_banner>image {
  width: 224rpx;
  height: 180rpx;
  /* background-color: #666; */
  border-radius: 10rpx;
}

.strategy-item-right {
  width: 65%;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #666;
  /* background-color: #666; */
}

.titles {
  font-size: 32rpx;
  color: black;
  padding-bottom: 20rpx;
}

.flex {
  display: flex;
  padding-top: 18rpx;
}

.flex image {
  width: 34rpx;
  height: 34rpx;
}

.datatime text {
  /* height: 32rpx;
  line-height: 32rpx; */
  display: inline-block;
  padding-left: 10rpx;
  position: relative;
  top: -5rpx;
}

.readnum {
  margin-left: 40rpx;
  /* text-align: center; */
}

.readnum text {
  display: inline-block;
  padding-left: 13rpx;
  /* position: relative;
  top: -1rpx; */
}

.flex .readicon {
  width: 32rpx;
  height: 28rpx;
  position: relative;
  top: 5rpx;
}
