/* 学分记录 */
.zan-dialog__container {
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  height: 620rpx;
  background: #eee;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  font-size: 30rpx;
  padding-bottom: 40rpx;
}
.container-item{
  width: 85%;
  padding: 20rpx 30rpx;
  background-color: white;
  margin: 30rpx auto;
}
.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.flexs{
  margin-top: 15rpx;
  color: #4685C9;
  display: flex;
  justify-content: space-between;
}
.flexs text{
margin-right: 15rpx;
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

/* 我要修学分 */
.credits__container {
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  height: 425rpx;
  background: #eee;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  font-size: 30rpx;
  padding-bottom: 30rpx;
}
.credits-item{
  width: 85%;
  padding: 20rpx 30rpx;
  background-color: white;
  margin: 30rpx auto;
}
.credits--show .credits__container {
  transform: translateY(0);
}

.credits-item{

  display: flex;
  justify-content: space-between;
}
.credits-item image{
width: 30rpx;
height: 30rpx;
}

.credits--show .credits__mask {
  display: block;
}